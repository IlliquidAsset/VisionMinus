<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:padding="@dimen/dp_2" android:layout_width="fill_parent" android:layout_height="@dimen/dp_120"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/media_image" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@mipmap/image_item_default" android:scaleType="centerCrop" />
    <TextView android:layout_gravity="end|center|top" android:id="@id/media_check" android:background="@mipmap/media_icon_frame_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dp_5" />
    <TextView android:textSize="@dimen/sp_12" android:textStyle="bold" android:textColor="@android:color/white" android:layout_gravity="end|bottom|center" android:id="@id/media_time" android:padding="@dimen/dp_5" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <ImageView android:layout_gravity="start|bottom|center" android:id="@id/media_like_icon" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dp_5" android:src="@mipmap/media_icon_save" />
    <ImageView android:layout_gravity="start|center|top" android:id="@id/media_icon_down" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/dp_5" android:src="@mipmap/media_already_down" />
</FrameLayout>
